<hgroup class="title">
    <h1>@ViewBag.PageTitle</h1>
    @if (!string.IsNullOrWhiteSpace(ViewBag.PageSubTitle))
    {
    <h2>@Html.Raw(ViewBag.PageSubTitle)</h2>   
    }
    @if (!string.IsNullOrWhiteSpace(ViewBag.PageCaption))
    {
    <footer>@Html.Raw(ViewBag.PageCaption)</footer>
    }
</hgroup>