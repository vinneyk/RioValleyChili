@using RioValleyChili.Client.Mvc.SolutionheadLibs.MvcClientSideBinding.Extensions
@functions 
{
    private string FormattedOrDefault()
    {
        return ViewData.TemplateInfo.FormattedModelValue == ViewData.ModelMetadata.Model
                   ? string.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:0.00}", ViewData.ModelMetadata.Model)
                   : ViewData.TemplateInfo.FormattedModelValue.ToString(); //string.Format(System.Globalization.CultureInfo.InvariantCulture, "{0}", );
    }
}

@Html.TextBox("", FormattedOrDefault(), Html.BuildHtmlAttributesForView<object>(new {@class = "text-box single-line", type = "number" }))